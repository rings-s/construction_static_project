{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": false,
		"moduleResolution": "bundler",
		"target": "esnext",
		"module": "esnext",
		"lib": ["dom", "es2022"],
		"baseUrl": ".",
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"]
		}
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte"
, "src/lib/i18n/locales/ar.json", "src/lib/i18n/locales/en.json"	],
	"exclude": [
		"node_modules",
		"build",
		".svelte-kit"
	]
}